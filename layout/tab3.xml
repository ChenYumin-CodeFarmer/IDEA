<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#abd9e0">

    <RelativeLayout
        android:id="@+id/up_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/person_bg">

    <ImageView
        android:id="@+id/person_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/people_1"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/click_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#00000000"
        android:textColor="@color/teal_700"
        android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <androidx.percentlayout.widget.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/up_layout">

        <Button
            android:id="@+id/mine_but"
            android:layout_gravity="left"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:text="我的"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/item_1"
            />

        <Button
            android:id="@+id/mark_but"
            android:layout_gravity="right|top"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:text="关注"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/item_2"
            />

        <Button
            android:id="@+id/about_but"
            android:layout_gravity="right|bottom"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:text="关于"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/item_4"
            />


        <Button
            android:id="@+id/setting_but"
            android:layout_gravity="left|bottom"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:text="设置"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/item_3"
            />
    </androidx.percentlayout.widget.PercentFrameLayout>

</RelativeLayout>

