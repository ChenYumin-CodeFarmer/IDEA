<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Register.LoginActivity"
    android:background="#abd9e0">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/idea_bg"
        android:layout_above="@+id/r_layout"
        android:layout_centerHorizontal="true"
        />
   <RelativeLayout
       android:id="@+id/r_layout"
       android:layout_width="350dp"
       android:layout_height="200dp"
       android:layout_centerInParent="true"
       android:background="@drawable/r_layout_bg">

       <TextView
           android:id="@+id/user_text"
           android:layout_width="70dp"
           android:layout_height="40dp"
           android:text="账号   ："
           android:textStyle="bold"
           android:gravity="center"
           android:textColor="@color/white"
           android:background="@drawable/r_text_bg"
           android:layout_marginTop="25dp"
           android:layout_marginLeft="20dp"
           ></TextView>

       <EditText
           android:id="@+id/user_edit"
           android:layout_width="250dp"
           android:layout_height="40dp"
           android:layout_toRightOf="@+id/user_text"
           android:layout_marginTop="25dp"
           ></EditText>

       <TextView
           android:id="@+id/password_text"
           android:layout_width="70dp"
           android:layout_height="40dp"
           android:text="密码   ："
           android:textStyle="bold"
           android:gravity="center"
           android:textColor="@color/white"
           android:background="@drawable/r_text_bg"
           android:layout_below="@+id/user_text"
           android:layout_marginLeft="20dp"
           ></TextView>

       <EditText
           android:id="@+id/password_edit"
           android:layout_width="250dp"
           android:layout_height="40dp"
           android:layout_toRightOf="@+id/password_text"
           android:layout_below="@+id/user_edit"
           ></EditText>

       <Button
           android:id="@+id/login_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="登录"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:layout_alignParentBottom="true"
           android:backgroundTint="#a9c7db"
           android:layout_marginBottom="20dp"
           ></Button>

       <Button
           android:id="@+id/register_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="注册"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:layout_alignParentLeft="true"
           android:layout_alignParentBottom="true"
           android:layout_marginLeft="20dp"
           android:backgroundTint="#a9c7db"
           android:layout_marginBottom="20dp"
           ></Button>

   </RelativeLayout>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/r_layout"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/jiantou_img"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_view"
            android:layout_marginLeft="20dp"
            ></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="没有账号？点这里！"
            android:layout_toRightOf="@+id/jiantou_img"
            android:gravity="bottom"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </RelativeLayout>
</RelativeLayout>